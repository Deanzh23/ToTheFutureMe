<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="letterModel"
            type="com.dean.tothefutureme.timeline.model.LetterModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:weightSum="10">

        <!-- 收件日期时间Layout -->
        <RelativeLayout
            android:id="@+id/dateTimeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/lineImageView"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:background="@color/colorThemeSkyBlue"/>

            <RelativeLayout
                android:id="@+id/dateTimeLeftLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/lineImageView">

                <!-- 收件日期 -->
                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="2017/12/06"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>

                <!-- 收件时间 -->
                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateTextView"
                    android:layout_centerHorizontal="true"
                    android:text="12:41"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>

        <!-- 发件人及其信件信息Layout -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/contentTopLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 发件人头像 -->
                    <com.dean.tothefutureme.custom.view.image.RoundImageView
                        android:id="@+id/senderAvatarImageView"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/ic_launcher_round"/>

                    <!-- 发件日期时间 -->
                    <TextView
                        android:id="@+id/sendDateTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/senderAvatarImageView"
                        android:paddingBottom="4dp"
                        android:text="2016/12/04 23:59"
                        android:textSize="@dimen/text_size_small"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contentTopLayout"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:minLines="4"
                    android:text="啊空间啊上飞机啊上了对方空间啊阿斯利康的风景啊上来的快放假啊撒上来的快放假啊上的风口浪尖啊上的法律框架啊上的法律框架刷卡来到解放军撒地方阿拉山口的飞机上的"
                    android:textSize="@dimen/text_size_medium"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>