<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- HomeActivity bottom footer -->
    <style name="RadioButtonTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- 文本样式 -->
    <style name="TextTheme">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ItemStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ListItemTitleTheme">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="ListItemContentTheme" parent="ListItemTitleTheme">
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

</resources>
